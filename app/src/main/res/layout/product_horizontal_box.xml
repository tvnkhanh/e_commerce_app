<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_element">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp">

        <CheckBox
            android:id="@+id/product_horizontal_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_horizontal_image"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/product_horizontal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="TextView"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/product_horizontal_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:text="TextView"
                    android:textColor="@color/light_grey" />
                <TextView
                    android:id="@+id/product_horizontal_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="TextView"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_element">
                    <ImageView
                        android:id="@+id/product_horizontal_minus_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_minus_24"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/product_horizontal_quantity"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:background="@drawable/bg_element"
                        android:padding="4dp"/>
                    <ImageView
                        android:id="@+id/product_horizontal_plus_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_plus_24"
                        android:layout_margin="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>